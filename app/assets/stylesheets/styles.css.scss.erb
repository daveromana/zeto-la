/* ----------- variables ----------- */

$main-black: #2D2D2D;
$main-green: #65C6BB;

/* ----------- global----------- */

html,
body {
  height: 100%;
  font-weight: 500;
  font-family: 'Lato';
  color: $main-black;
  background-color: white;
}

.body-container {
  height: 100%;
  margin-right: 15px;
  margin-left: 0px;
  padding-right: 0;
}

a {
  color: $main-green;
  &:hover {
    color: $main-black;
  }
}

.table {
  text-align: center;
  margin: auto;
}

.green {
  color: $main-green;
}

/* ----------- navbar ----------- */

.navbar {
  background-color: white;
  border-bottom: 1px solid $main-green;
}

.icon-bar {
  background-color: black;
}

.container-fluid {
  border-bottom: 1px solid #F2F1EF;
}

.navbar-brand {
  letter-spacing: 5px;
}

.navbar-brand:hover {
  background-color: #EEEEEE;
}

/* ----------- user#home ----------- */

.jumbotron {
  text-align: center;
  background-color: transparent;
}

.site-name {
  font-size: 3em;
  letter-spacing: 10px;
  font-weight: 100;
  color: $main-green;
}

.tag-line {
  color: $main-black;
}

.initial-enter-btn {
  border: 1px solid $main-green;
  padding: 8px 15px;
  background-color: white;
  color: $main-black;
}

.initial-enter-btn:hover {
  background-color: white;
  border: 1px solid $main-green;
  color: $main-black;
}

.enter-btn {
  border: 1px solid $main-green;
  padding: 8px 15px;
  background-color: white;
  color: $main-black;
}

.enter-btn:hover {
  text-decoration: none;
}

/* ----------- about ----------- */

.about-container {
  padding-top: 100px;
  padding-bottom: 100px;
}

.about-me-purpose {
  text-align: center;
}

.about-me-portrait {
  height: 300px;
  width: 300px;
}

/* ----------- contact ----------- */

.contact-page-container {
  text-align: center;
  padding-top: 100px;
}

.contact-email {
  font-size: 2em;
}
/* ----------- user#index ----------- */

#map {
  top: 0;
  bottom: 0;
  height: 100%;
  z-index: 0;
}

.popup {
  font-weight: 300;
  text-align: center;
}

.index-container {
  height: 100%;
}

.launch-info-header,
.launch-info-options {
  text-align: center;
}

.launch-info-header {
  padding-bottom: 10px;
}

.launch-info-options {
  background-color: white;
}

.launch-info-alert,
.credits {
  padding-top: 20px;
  text-align: center;
}

#search-field {
  background: url('<%= asset_path("search2.png") %>') no-repeat left center;
  background-size: 20px 20px;
  padding-left: 30px;
  padding-top: 5px;
  padding-bottom: 5px;
  border: none;
}

.launch-info-users {
  padding-top: 30px;
}

.user-info {
  background-color: white;
  border-top: 1px solid $main-green;
  border-bottom: 1px solid $main-green;
  border-left: none;
  border-right: none;
  border-collapse: collapse;
}

.user-info:last-child {
  border-bottom-right-radius: 0px;
  border-bottom-left-radius: 0px;
}

.user-info:first-child {
  border-top-right-radius: 0px;
  border-top-left-radius: 0px;
}

.avatar {
  height: 60px;
  width: 60px;
  border: 1px solid $main-green;
}

.username {
  font-size: 15px;
}

.username-container {
  padding-top: 5px;
}

.email-image {
  height: 30px;
  width: 30px;
  &:hover {
    border-bottom: 1px solid $main-green;
  }
}

.credits {
  font-size: 12px;
}

.collapse-trigger-container {
  padding-top: 50px;
  z-index: 1;
  position: fixed;
}

#collapse-trigger {
  color: white;
  background-color: #404040;
  border-radius: 0;
  border: 1px solid $main-black;
  opacity: 0.7;
  &:hover {
    background-color: #505050;
  }
}

.in {
  height: 100% !important;
}

/* ----- users#index posts ----- */

.post-info {
  background-color: white;
  border-top: 1px solid $main-green;
  border-bottom: 1px solid $main-green;
  border-left: none;
  border-right: none;
  border-collapse: collapse;
}

.post-info:last-child {
  border-bottom-right-radius: 0px;
  border-bottom-left-radius: 0px;
}

.post-info:first-child {
  border-top-right-radius: 0px;
  border-top-left-radius: 0px;
}

/* ----------- users#index post ----------- */

#post-role {
  text-align: right;
}

/* ----------- user#show -----------  */

.portrait {
  height: 175px;
  width: 175px;
}

.user-details-container {
  text-align: center;
}

.user-show-marker {
  height: 25px;
  width: 25px;
}

/* ----------- user#edit ----------- */

.edit-container {
  text-align: center;
  padding-top: 100px;
}

.delete-link {
  float: left;
}

/* ----------- contact_request#new ----------- */

.contact-request-container {
  padding-top: 100px;
}

.email-header-container {
  border-bottom: 1px solid $main-green;
}

.email-form-container {
  padding-top: 30px;
}

.email-submit-btn {
  border: 1px solid $main-green;
  &:hover {
    border: 1px solid $main-green;
  }
}
/* ----------- post#index ----------- */

.all-posts-container {
  padding-top: 100px;
}

.all-posts-table tr:first-child td {
  border-top: none;
  color: $main-green;
}

/* ----------- post#new ----------- */

.new-post-container {
  padding-top: 100px
}

.input-group-addon {
  display: none;
}

.new-post-header-container {
  border-bottom: 1px solid $main-green;
}

.new-post-form-container {
  padding-top: 30px;
}

.create-post-submit-btn {
  border: 1px solid $main-green;
  &:hover {
    border: 1px solid $main-green;
  }
}

/* ----------- post#edit ----------- */

.edit-post-container {
  padding-top: 100px
}

.edit-post-header-container {
  border-bottom: 1px solid $main-green;
}

.edit-post-form-container {
  padding-top: 30px;
}

/* ----------- post#show ----------- */

.post-show-container {
  padding-top: 100px;
}

.post-show-content {
  text-align: center;
}

.post-details-container {
  margin-top: 50px;
}

.post-event-join-container {
  padding-bottom: 30px;
}

.post-join-btn,
.create-post-btn,
.post-edit-btn,
.post-delete-btn {
  border: 1px solid $main-green;
  &:hover {
    border: 1px solid $main-green;
  }
}

.create-post-btn {
  margin-right: 2px;
}

.create-post-btn-container {
  padding-bottom: 40px;
}

.time-image {
  height: 23px;
  width: 23px;
}

.calender-image {
  height: 30px;
  width: 30px;
}

.post-author-detail-container {
  padding-bottom: 30px;
}

.post-author-detail-container,
.post-details-container,
.post-title-description-container {
  border: 1px solid $main-green;
}

.show-post-table tr:first-child td {
  border-top: none;
  padding-top: 30px;
}

.post-show-flash-container {
  text-align: center;
}

.back-link-container {
  text-align: center;
  padding-top: 30px;
  padding-bottom: 30px;
}

.back-link {
  font-size: 15px;
}
/* ----------- media queries ----------- */

/* ----- mobile ----- */
@media (max-width: 768px) {
  #map {
    height: 60%;
  }

  .homepage-container {
    padding-top: 80px;
  }

  .collapse-trigger-container {
    display: none;
  }

  .username-container {
    display: inline;
  }

  .user-portrait-container {
    display: inline;
  }

  .email-link-container {
    display: inline;
    float: right;
  }
}

/* ----- tablet ----- */
@media (max-width: 992px) {
  #map {
    height: 60%;
  }

  .collapse-trigger-container {
    display: none;
  }

  .username-container {
    display: inline;
  }

  .user-portrait-container {
    display: inline;
  }

  .email-link-container {
    display: inline;
    float: right;
  }

  .post-title-description-container {
    margin-top: 50px;
  }
}

/* ----- desktop ----- */
@media (min-width: 992px) {
  .launch-info-container {
    height: 100%;
    background-color: white;
    border: 1px solid $main-green;
    padding-top: 50px;
    left: 1.3%;
    position: absolute;
    display: block;
    z-index: 1;
    overflow: auto;
    opacity: 0.95;
  }
}
