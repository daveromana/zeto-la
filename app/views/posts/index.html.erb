
<div class="col-md-12 all-posts-container">
  <table class="table all-posts-table">
    <tr>
      <td>Created On</td>
      <td>Last Updated On</td>
      <td>Post Title</td>
      <td>Post Type</td>
      <td>Post Author</td>
    </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.created_at.strftime("%m/%d/%Y") %></td>
      <td><%= post.updated_at.strftime("%m/%d/%Y") %></td>
      <td><%= link_to post.title, post_path(post) %></td>
      <td><%= post.role %></td>
      <td><%= post.user.name %></td>
    </tr>
  <% end %>
  </table>
</div>

