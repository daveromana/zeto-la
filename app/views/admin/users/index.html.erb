<div class="col-md-12 a-container">
  <h1>Admin Page</h1>
  <h4>Total Members: <%= @users.count %></h4>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>ID</td>
        <td>Name</td>
        <td></td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'edit account', edit_admin_user_path(user) %></td>
          <td><%= link_to 'delete account', admin_user_path(user), method: :delete, class: 'delete-link' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
